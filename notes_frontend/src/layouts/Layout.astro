<style>
  :root {
    /* Base light theme tokens aligned with Ocean Professional */
    --bg-color: #f9fafb;
    --text-color: #111827;
    --text-secondary: #4b5563;
    --border-color: rgba(17, 24, 39, 0.08);
    --card-bg: #ffffff;
    --card-hover-bg: #f9fafb;
    --shadow-color: rgba(2, 6, 23, 0.06);
    --shadow-hover-color: rgba(2, 6, 23, 0.1);

    --brand-primary: #2563EB;
    --brand-secondary: #F59E0B;
  }

  body.dark-theme {
    /* Dark theme */
    --bg-color: #0b1220;
    --text-color: #e5e7eb;
    --text-secondary: #9ca3af;
    --border-color: rgba(255, 255, 255, 0.12);
    --card-bg: #0f172a;
    --card-hover-bg: #0b1220;
    --shadow-color: rgba(0, 0, 0, 0.35);
    --shadow-hover-color: rgba(0, 0, 0, 0.45);
  }

  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--bg-color);
    color: var(--text-color);
    transition: background-color 280ms ease, color 280ms ease;
  }

  /* Global typography and smoothing */
  :where(html) {
    font-family: Inter, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, "Apple Color Emoji", "Segoe UI Emoji";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    font-kerning: normal;
  }

  /* Smooth focus outlines */
  :focus-visible {
    outline: 2px solid transparent;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.25);
    border-radius: 10px;
    transition: box-shadow .2s ease;
  }

  /* Scrollbar styling (subtle) */
  * {
    scrollbar-width: thin;
    scrollbar-color: rgba(100,116,139,.4) transparent;
  }
  *::-webkit-scrollbar {
    height: 8px;
    width: 8px;
  }
  *::-webkit-scrollbar-thumb {
    background: rgba(100,116,139,.35);
    border-radius: 10px;
  }
  *::-webkit-scrollbar-thumb:hover {
    background: rgba(100,116,139,.5);
  }
</style>
